@model List<InstructorListItemVM>
<main style="margin:3rem">
    @* <button type="button" asp-action="Create" asp-controller="Instructor" class="btn btn-primary">Create</button> *@
    <a asp-action="Create" class="btn btn-outline-success">Create</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Job</th>
                <th scope="col">Picture</th>
                <th colspan="2"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Job</td>
                    <td><img style="height:6rem;width:7rem; object-fit:cover" src="@item.Picture"> </td>
                    <td>
                        <a class="btn btn-outline-info" asp-action="Update" asp-route-id="@item.Id">Update</a>
                       @*  <a asp-action="Update" class="btn btn-outline-success">Update</a> *@
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-success">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</main>
            